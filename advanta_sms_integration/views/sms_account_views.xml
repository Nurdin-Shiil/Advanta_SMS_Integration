<odoo>
    <record id="view_sms_account_form" model="ir.ui.view">
        <field name="name">sms.account.form</field>
        <field name="model">sms.account</field>
        <field name="arch" type="xml">
            <form string="SMS Account">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="partner_id" />
                        <field name="apikey" />
                        <field name="shortcode" />
                        <field name="url" />
                        <field name="active" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_sms_account_tree" model="ir.ui.view">
        <field name="name">sms.account.list</field>
        <field name="model">sms.account</field>
        <field name="arch" type="xml">
            <list string="SMS Accounts">
                <field name="name" />
                <field name="partner_id" />
                <field name="url" />
                <field name="active" />
            </list>
        </field>
    </record>

    <record id="action_sms_account" model="ir.actions.act_window">
        <field name="name">SMS Accounts</field>
        <field name="res_model">sms.account</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_sms_account_root"
        name="SMS Accounts"
        parent="phone_validation.phone_menu_main"
        action="action_sms_account"
        sequence="25" />

</odoo>